      {{#if logged_in}}
      <a href="/">Homepage</a> |
      <a href="/user-profile">User Profile</a> |
      <button id="logout">Logout</button>
      {{else}}
      <a href="/">Homepage</a> |
      <a href="/user-profile">User Profile</a> |
      <a href="/login">Login</a>
      {{/if}}
    </nav>
  </header>
  <main>
    {{{body}}}
  </main>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  
  {{/if}}
</body>

</html>